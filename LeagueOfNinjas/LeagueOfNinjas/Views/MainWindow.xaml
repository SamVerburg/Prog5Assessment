<Window x:Class="LeagueOfNinjas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeagueOfNinjas"
        mc:Ignorable="d"
        Title="Ninja list" Height="350" Width="525"
        DataContext="{Binding Ninjas, Source={StaticResource Locator}}">
    <StackPanel>
        <TextBlock>Ninja's</TextBlock>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Ninjas}" SelectedItem="{Binding SelectedNinja, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Gold" Binding="{Binding Gold}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Command="{Binding ShowAddNinja}" Content="Add" />
        <Button Command="{Binding ShowEditNinja}" Content="Edit" />
    </StackPanel>
</Window>
