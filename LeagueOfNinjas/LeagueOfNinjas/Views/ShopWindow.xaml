<Window x:Class="LeagueOfNinjas.Views.ShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeagueOfNinjas.Views"
        mc:Ignorable="d"
        Title="ShopWindow" Height="300" Width="339.512"
         DataContext="{Binding Shop, Source={StaticResource Locator}}">
    <StackPanel>
        <TextBlock>Items</TextBlock>
        <DataGrid IsReadOnly="True" AutoGenerateColumns="False" SelectedItem="{Binding SelectedItem}" ItemsSource="{Binding ShopItems, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="" />
                <DataGridTextColumn Header="Strength" Binding="{Binding Strength,Mode=TwoWay}" Width="" />
                <DataGridTextColumn Header="Agility" Binding="{Binding Agility}" Width="" />
                <DataGridTextColumn Header="Intelligence" Binding="{Binding Intelligence}" Width="" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Command="{Binding BuyItemCommand}" Content="Buy Item"/>
    </StackPanel>
</Window>
