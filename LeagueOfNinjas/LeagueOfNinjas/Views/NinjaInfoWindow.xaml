<Window x:Class="LeagueOfNinjas.Views.NinjaInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeagueOfNinjas.Views"
        mc:Ignorable="d"
        Title="NinjaInfoWindow" Height="300" Width="300"
         DataContext="{Binding NinjaInfo, Source={StaticResource Locator}}">
    <StackPanel>
        <Label>Name:</Label>
        <Label Content="{Binding SelectedNinja.Name}"></Label>

        <Label>Gold amount:</Label>
        <Label Content="{Binding SelectedNinja.Gold}"></Label>
        
        <Label>Statistics</Label>
        <Label>Strength</Label>
        <Label Content="{Binding Strength}"></Label>
        <Label>Intelligence</Label>
        <Label Content="{Binding Intelligence}"></Label>
        <Label>Agility</Label>
        <Label Content="{Binding Agility}"></Label>
        
        <Button Content="Open Inventory"/>
        <Button Content="Go to shop"/>


    </StackPanel>
</Window>
